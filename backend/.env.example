# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# In production, specify absolute path to database file
# Example: DB_PATH=/opt/app/data/storage.db
# DB_PATH=

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database (SQLite - path relative to backend folder)
DATABASE_PATH=./data/storage.db

# Frontend URL (for CORS) - Update for production
FRONTEND_URL=http://localhost:3000
